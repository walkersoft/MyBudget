<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MyBudget.UI.Views.ExpenseListView">
  <DockPanel Margin="15">
    <DockPanel DockPanel.Dock="Top">
      <Label Content="Existing Expenses"
             FontSize="24" />
    </DockPanel>
    <DataGrid>
      <DataGrid.Columns>
        <DataGridTextColumn Header="Source" Width="100"/>
        <DataGridTextColumn Header="Category" Width="100"/>
        <DataGridTextColumn Header="Type" Width="100"/>
        <DataGridTextColumn Header="Amount" Width="100"/>
        <DataGridTextColumn Header="Effective Date" Width="100"/>
        <DataGridTextColumn Header="Expires On" Width="100"/>
      </DataGrid.Columns>
    </DataGrid>
  </DockPanel>
</UserControl>
